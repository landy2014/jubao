page {
    height: 100%;
    background: linear-gradient(to bottom, #3976e8 20%, #fff);
    /*background: linear-gradient(to bottom, #1296db 20%, #fff);*/
    font-family: Arial, Helvetica, sans-serif;
}
/**未授权提示**/
.no-access-tips {
    padding-top: 200rpx;
    font-size: 40rpx;
    color: #fff;
    text-align: center;
}
/** today **/
.today-detail {
    width: 100%;
}

.today-detail .detail-area {
    display: flex;
    padding: 0 10rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    font-size: 28rpx;
}

.today-detail .detail-area .area-today {
    flex: 1;
}

.today-detail .detail-area .area-point{
    flex: 1;
    text-align: right;
}
.area-point .change-point {
    font-size: 24rpx;
}

/** 今天天气实况 **/
.today-detail .detail-image {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    font-size: 40rpx;
}
.today-detail .detail-image image {
    width: 80rpx;
    height: 80rpx;
    vertical-align: middle;
}

.today-detail .detail-temp {
    position: relative;
    text-align: center;
    font-size: 180rpx;
    line-height: 160rpx;
    color: #fff;
}
.today-detail .detail-temp .text {
    font-size: 24rpx;
}
.today-detail .detail-temp .align-up {
    position: absolute;
    top: -20rpx;
    font-size: 100rpx;
}

.today-detail .detail-tips {
    padding-bottom: 5rpx;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
}

/** 24 hours**/
.daily-container {
    position: fixed;
    z-index: 10;
    bottom: 0;
    left: 0;
    width: 100%;
    padding-bottom: 10rpx;
    color: #fff;
    background: rgba(17, 38, 86, .7);
}

.daily-container image {
   width: 40rpx;
   height: 40rpx;
}

.title {
    padding: 15rpx 10rpx;
    font-size: 26rpx;
    border-bottom: 1px solid rgba(255, 255, 255, .5);
}

.hour-list {
    display: flex;
    border-bottom: 1rpx solid rgba(255, 255, 255, .5);
    white-space: nowrap;
    overflow-x: scroll;
}
.hour-list .hour-item {
    display: inline-block;
    padding: 10rpx;
    font-size: 24rpx;
}

.hour-list .hour-item .item {
    padding: 5rpx;
    text-align: center;
}

/** 15 天天气**/
.days-list {
    display: flex;
    padding: 10rpx 0 0 0;
    white-space: nowrap;
    overflow-x: scroll;
}
.days-list .days-tr {
    display: inline-block;
    font-size: 24rpx;
    text-align: center;
    border-right: 1rpx solid rgba(255, 255, 255, .5);
}
.days-list .days-tr:last-child {
    border-right: 0;
}

.days-list .days-tr .days-td {
    padding: 10rpx 20rpx;
}
.days-list .days-tr .days-td image {
    vertical-align: middle;
}