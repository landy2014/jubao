/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
  background: #fff;
}
.main {
  padding-top: 200rpx;

}
.main .tip-404 {
  width: 100rpx;
  height: 100rpx;
}

.main .tip-no-data {
  padding: 50rpx;
  text-align: center;
}

.main .tip-text {
  padding: 10px;
  font-size: 24rpx;
  color: #333;
}

.header {
  position: fixed;
  z-index: 10;
  width: 100%;
  height: 100rpx;
  padding: 50rpx 0;
  background: #1296db;
}
.header .form-input {
  position: relative;
  z-index: 10;
  height: 60rpx;
  width: 90%;
  margin: 0 auto;
  padding: 10rpx;
  color: #333;
  font-size: 30rpx;
  border-radius: 12rpx;
  background: #fff;
}
.header .form-input input {
  height: 60rpx;
  padding: 0;
}
.header .scan-button {
  position: absolute;
  z-index: 2;
  right: 0;
  top: 1rpx;
  width: 80rpx;
  height: 80rpx;
}

/** 列表样式 **/
.express-list {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  background: #efefef;
}
.express-list .list-title {
  padding: 20rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

.express-list .list-item {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
  font-size: 30rpx;
  background: #fff;
  border-bottom: 20rpx solid #efefef;
}
.show-delete .delete-mark {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 80%;
  background-color: rgba(0, 0, 0, .5);
}
.list-item .item-left {
  display: inline-block;
  width: 100%;
  vertical-align: middle;
}
.list-item .item-right {
  display: inline-block;
  width: 0;
  vertical-align: middle;
}

.show-delete .item-left {
  width: 80%;
}
.show-delete .item-right {
  width: 20%;
  text-align: center;
}
.item-right .icon-wrap {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  font-size: 0;
  line-height: 0;
  border-radius: 50%;
  color: #fff;
  background-color: #d81e06;
  border: 14rpx solid #d81e06;
}
.item-right image {
  width: 40rpx;
  height: 40rpx;
}


.list-item .title {
  width: 90%;
  margin: 0 auto;
  padding-bottom: 15rpx;
  font-size: 28rpx;
}
.list-item .title image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 10rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.list-item .title .push-right {
  float: right;
  color: #ccc;
}
.list-item .info {
  width: 84%;
  margin: 0 auto;
  padding: 3%;
  background: #f5f5f5;
  border: 1rpx solid #cfcfcf;
  border-radius: 12rpx;
}
.list-item .info .number {
  padding-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
  font-family: "arial";
}
.list-item .info .context {
  font-size: 22rpx;
  line-height: 30rpx;
  color: #8c8c8c;
}
